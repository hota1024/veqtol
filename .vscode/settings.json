{
  "json.schemas": [
    {
      "fileMatch": ["/veqtol.json"],
      "schema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "titleColor": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "descriptionColor": {
            "type": "string"
          },
          "siteUrl": {
            "type": "string"
          },
          "siteImageUrl": {
            "type": "string"
          },
          "twitterName": {
            "type": "string"
          },
          "background": {
            "type": "string"
          },
          "color": {
            "type": "string"
          },
          "postColor": {
            "type": "string"
          },
          "postsPerPage": {
            "type": "number"
          },
          "postText": {
            "type": "string"
          },
          "postHeader1BorderColor": {
            "type": "string"
          },
          "codeTheme": {
            "type": "string",
            "enum": [
              "dracula",
              "duotoneDark",
              "duotoneLight",
              "github",
              "nightOwl",
              "nightOwlLight",
              "oceanicNext",
              "palenight",
              "shadesOfPurple",
              "synthwave84",
              "ultramin",
              "vsDark"
            ]
          },
          "inlineCodeColor": {
            "type": "string"
          },
          "inlineCodeText": {
            "type": "string"
          },
          "tagColor": {
            "type": "string"
          },
          "tagText": {
            "type": "string"
          },
          "timeColor": {
            "type": "string"
          },
          "buttonColor": {
            "type": "string"
          },
          "buttonText": {
            "type": "string"
          },
          "postPaginationPrevText": {
            "type": "string"
          },
          "postPaginationNextText": {
            "type": "string"
          },
          "footerNavColor": {
            "type": "string"
          },
          "footerNavLinkText": {
            "type": "string"
          },
          "footerNavLinkHoverText": {
            "type": "string"
          },
          "footerLinks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "text": {
                  "type": "string"
                },
                "href": {
                  "type": "string"
                },
                "newTab": {
                  "type": "boolean"
                }
              },
              "required": ["text", "href"],
              "additionalProperties": false
            }
          },
          "copyrightColor": {
            "type": "string"
          },
          "copyrightText": {
            "type": "string"
          },
          "copyright": {
            "type": "string"
          },
          "hideVeqtolCredit": {
            "type": "boolean"
          }
        },
        "required": ["title", "siteUrl"],
        "additionalProperties": false
      }
    }
  ]
}
